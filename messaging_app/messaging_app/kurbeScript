#!/bin/bash

# kurbeScript - Set up and verify a local Kubernetes cluster using Minikube

echo "ğŸ” Checking if Minikube is installed..."
if ! command -v minikube &> /dev/null; then
    echo "âŒ Minikube is not installed. Please install it from https://minikube.sigs.k8s.io/docs/start/"
    exit 1
fi

echo "âœ… Minikube is installed."

echo "ğŸš€ Starting Minikube cluster..."
minikube start

echo "â³ Waiting for cluster to initialize..."
sleep 10

echo "ğŸ“¡ Verifying cluster status..."
kubectl cluster-info

echo "ğŸ“¦ Retrieving available pods across all namespaces..."
kubectl get pods --all-namespaces

echo "âœ… Kubernetes cluster setup complete."
